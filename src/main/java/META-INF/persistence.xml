<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_O.xsd"
	version="3.0">
	<persistence-unit name="sistema_multas">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.mildevs.entity.mildevs-multas</class>
		<properties>
			<property name="jakarta.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:postgresql://127.0.0.1:5432/mildevs_multas" />
			<property name="
				javax.persistence.jdbc.user" value="postgres" />
			<property name="jakarta.persistence.jdbc.password"
				value="123" />
			<property name="hibernate.default_schema" value="sistema_multas" />
			<property name="hibernate.dialect”"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
